@using System.Security.Claims
@{
    ViewData["Title"] = "Profile";
    bool isAuthenticated = Context.User.Identity?.IsAuthenticated ?? false;
    String? avatar = Context
        .User
        .Claims
        .FirstOrDefault(c => c.Type == ClaimTypes.UserData)
        ?.Value;
    bool hasAvatar = !String.IsNullOrEmpty(avatar);
    char avatarLetter = (
        Context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name) ??
        Context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email)
    )?.Value.ToUpper()[0] ?? 'A';

    String userName = Context
        .User
        .Claims
        .FirstOrDefault(c => c.Type == ClaimTypes.Name)
        ?.Value ?? "Anonymous";

    String registered = Context
        .User
        .Claims
        .FirstOrDefault(c => c.Type == "User::Registered")
        ?.Value ?? "- - -";

    String email = Context
        .User
        .Claims
        .FirstOrDefault(c => c.Type == ClaimTypes.Email)
        ?.Value ?? "- - -";

    String birthdate = Context
        .User
        .Claims
        .FirstOrDefault(c => c.Type == ClaimTypes.DateOfBirth)
        ?.Value ?? "- - -";
}

<div class="text-center">
    <h1 class="display-4">Кабінет користувача</h1>
</div>

<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-8 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    @if (hasAvatar)
                                    {
                                        <img class="img-radius" src="/Home/Download/@(avatar)" alt="avatar" />
                                    }
                                    else
                                    {
                                        <b class="img-radius avatar-letter">@avatarLetter</b>
                                    }
                                </div>
                                <h6 class="f-w-600" profile-editable>@userName</h6>
                                <p>З нами з @registered</p>
                                <i id="profile-edit" class="bi bi-pencil-square"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400" profile-editable>@email</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Дата народження</p>
                                        <h6 class="text-muted f-w-400" profile-editable>@birthdate</h6>
                                    </div>
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Projects</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Recent</p>
                                        <h6 class="text-muted f-w-400">Sam Disuja</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Most Viewed</p>
                                        <h6 class="text-muted f-w-400">Dinoter husainm</h6>
                                    </div>
                                </div>
                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

Д.З. Закласти у кабінет користувача поля для зміни паролю:
- старий пароль
- новий пароль 
Можна використати наявні поля форми "Projects"/"Most Viewed"/"Recent"
Переводити їх в режим редагування при натисканні відповідної кнопки
